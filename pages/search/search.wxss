}
.iconfont {
  font-family:"iconfont" !important;
  font-size:16px;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.icon-loading:before { 
  display: inline-block;
  content: "\e6e2";  
  animation: rotate 3s linear infinite;  
}

.movie {
    position: relative;
    height: 270rpx;
    padding: 20rpx 0rpx;
    border-bottom: 1rpx solid #ddd;
    vertical-align: middle;
    font-size: 14px;
}

.movie image {
    float: left;
    width: 190rpx;
    height: 100%;
}
.movie .msg {
    padding-left: 210rpx;
    padding-right: 20rpx;
}
.movie .msg>view {
    margin-top: 10rpx;
    color: #888;
    display: -webkit-box;    
    -webkit-box-orient: vertical;    
    -webkit-line-clamp: 2;    
    overflow: hidden;
}

.movie .msg>.title {
    margin-top: 0;
    font-size: 16px;
    color: #333;
}
.movie .msg .score {
    color: #cf5656;
}
.loading {
    padding: 24rpx;
    text-align: center;
    color: #2aae5c;
    font-size: 12px;
}

input {
  margin: 24rpx ;
  background:  #aee7c4;
  border-radius: 40rpx;
  padding: 10rpx 0;
  padding-left: 60rpx;
  color: #666;
  font-size: 16px;
}
.placeholder {
  font-size: 14px;
  line-height: 1.5em;
  color: #aaa;
  /* padding-left: 60rpx; */
}
.search {
    padding:  12rpx 24rpx;
    color: #2aae5c;
    font-size: 14px;

}